<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>JavaScript Number Logic</title>
    <script>
        function calculate() {
            // Ask user for two numbers
            let x = prompt("Enter the first number (x):");
            let y = prompt("Enter the second number (y):");
            
            // Convert inputs to numbers
            x = Number(x);
            y = Number(y);

            // Validate inputs
            if (isNaN(x) || isNaN(y)) {
                alert("Please enter valid numbers.");
                return;
            }
            if (x === y) {
                alert("Please enter two different numbers.");
                return;
            }

            // Calculate sum and product
            let sum = x + y;
            let product = x * y;

            // Compare x and y
            let comparison = "";
            if (x > y) {
                comparison = x + " is bigger than " + y + ".";
            } else {
                comparison = y + " is bigger than " + x + ".";
            }

            // Display results
            let output = "The sum of " + x + " and " + y + " is " + sum + ".<br />" +
                         "The product of " + x + " and " + y + " is " + product + ".<br />" +
                         comparison;

            document.getElementById("result").innerHTML = output;
        }
    </script>
</head>
<body>
    <h1>JavaScript Number Logic Demo</h1>
    <button onclick="calculate()">Enter Numbers and Calculate</button>
    <div id="result" style="margin-top: 20px; font-weight: bold;"></div>
</body>
</html>
